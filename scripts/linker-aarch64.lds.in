#include "../boot/image.h"

SECTIONS
{                               //注：. 表示“当前指针”的位置，.段名 表示某个段的位置
    . = TEXT_OFFSET;            //将当前的指针赋值为TEXT_OFFSET
    img_start = .;              //将当前的指针赋值给镜像开始的地址(ELF文件入口地址)
    init : {
        ${init_object}          //指定.init端的内容为init——object,即bootloader编译后的机器吗
    }
                                //定义结束后当前指针自动更新为.init的为结尾地址
    . = ALIGN(SZ_16K);

    init_end = ABSOLUTE(.);

    .text KERNEL_VADDR + init_end : AT(init_end) {
        *(.text*)
    }

    . = ALIGN(SZ_64K);
    .data : {
        *(.data*)
    }
    . = ALIGN(SZ_64K);

    .rodata : {
        *(.rodata*)
    }
    _edata = . - KERNEL_VADDR;

    _bss_start = . - KERNEL_VADDR;
    .bss : {
        *(.bss*)
    }
    _bss_end = . - KERNEL_VADDR;
    . = ALIGN(SZ_64K);
    img_end = . - KERNEL_VADDR;
}
